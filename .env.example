# Environment Configuration Template
# Copy this file to .env and customize values for your environment

# Node Environment
# Specifies the deployment environment (affects logging verbosity, security features)
# Valid values: development|production|test
NODE_ENV=development

# Server Port
# Port number for the MCP host service to listen on
# Default: 3000
PORT=3000

# Logging Level
# Controls verbosity of application logs
# Valid values: error|warn|info|debug
# Default: info
LOG_LEVEL=info

# Log File Path
# Optional: Path to write logs to file (in addition to console)
# If not specified, logs are written to console only
# Example: ./logs/mcp-host.log
LOG_FILE=

# GraphQL Introspection
# Enable/disable GraphQL introspection endpoint (for development/testing)
# Should be disabled in production to prevent schema exposure
# Valid values: true|false
# Default: true
GRAPHQL_INTROSPECTION=true

# Maximum Query Depth
# GraphQL query depth limit to prevent denial-of-service attacks
# Prevents deeply nested queries that could consume excessive resources
# Default: 10
MAX_QUERY_DEPTH=10

# Request Timeout (milliseconds)
# Maximum time allowed for a request to complete
# Prevents requests from hanging indefinitely
# Default: 30000 (30 seconds)
REQUEST_TIMEOUT_MS=30000
